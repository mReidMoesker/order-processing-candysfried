@model IEnumerable<OrderProcessingSystem.Models.Orders>

@{
    ViewData["Title"] = "Orders";
    var completeOrders = Model.Where(o => o.IsComplete).ToList();
    var incompleteOrders = Model.Where(o => !o.IsComplete).ToList();
}

<h2>Orders</h2>
<hr />
<br />

<div class="row">
    <div class="col-md-6 border-incomplete">
        <h3>Incomplete Orders</h3>
        @if (incompleteOrders.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in incompleteOrders)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.CustomerName</td>
                            <td>@order.OrderDetails</td>
                            <td>
                                <a asp-action="DeleteOrders" asp-route-id="@order.OrderId" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No incomplete orders.</p>
        }
    </div>

    <div class="col-md-6 border-complete">
        <h3>Complete Orders</h3>
        @if (completeOrders.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in completeOrders)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.CustomerName</td>
                            <td>@order.OrderDetails</td>
                            <td>
                                <a asp-action="DeleteOrders" asp-route-id="@order.OrderId" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No completed orders.</p>
        }
    </div>
</div>